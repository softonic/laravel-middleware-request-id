{
  "name": "softonic/laravel-middleware-request-id",
  "description": "Middleware for Laravel Framework to add the X-Request-ID header in the requests and responses.",
  "authors": [
    {
      "name": "Jose Manuel Cardona",
      "email": "josemanuel.cardona@softonic.com"
    }
  ],
  "keywords": [
    "laravel",
    "middleware",
    "tracking"
  ],
  "license": "Apache-2.0",
  "type": "library",
  "require": {
    "php": ">=8.5",
    "illuminate/http": "^12.0",
    "ramsey/uuid": "^4.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpstan/phpstan": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "tests": "@test",
    "phpunit": "phpunit",
    "phpcs": "php-cs-fixer fix --dry-run --diff --verbose",
    "fix-cs": "php-cs-fixer fix",
    "phpstan": "phpstan analyse --memory-limit=2G"
  },
  "autoload": {
    "psr-4": {
      "Softonic\\Laravel\\Middleware\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Softonic\\Laravel\\Middleware\\": "tests/"
    }
  }
}
